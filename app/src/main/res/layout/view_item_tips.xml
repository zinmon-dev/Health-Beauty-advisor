<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_color"
    android:layout_margin="@dimen/margin_medium">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.padc.beauty.components.DynamicHeightImageView
            android:id="@+id/iv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">
        <com.padc.beauty.components.MMTextView
            android:id="@+id/tv_tips_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:textAllCaps="true"
            style="@style/TitleTextStyle"/>
        <ImageView
            android:id="@+id/iv_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:contentDescription="@string/favorites"
            android:src="@drawable/ic_import_contacts_black_24dp"
            android:tint="@color/text_black_ish"
            android:background="@null" />
    </LinearLayout>



    </FrameLayout>
    <com.padc.beauty.components.MMTextView
        android:id="@+id/tv_tips_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_small"
        style="@style/DescTextStyle"/>
</LinearLayout>