<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#ffffff">
    <com.padc.beauty.components.MMTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_regular_3x"
        android:textColor="@color/primary"
        android:layout_margin="@dimen/margin_medium"
        android:text="Your Hair Style"/>
    <com.padc.beauty.components.MMTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:layout_margin="@dimen/margin_medium"
        android:text="Curls will only add to the round, symmetrical look of a circular or chubby face, so go for texture rather than curliness. Waves are a good option, as long as they are casual, random twists with some layers hanging over the outer edges of the face, to reduce the width."/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">
        <com.padc.beauty.components.DynamicHeightImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/special_hair_style1"/>
        <com.padc.beauty.components.DynamicHeightImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/special_hair_style1"/>
        <com.padc.beauty.components.DynamicHeightImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/special_hair_style1"/>
    </LinearLayout>
    <com.padc.beauty.components.MMTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_regular_3x"
        android:textColor="@color/primary"
        android:layout_margin="@dimen/margin_medium"
        android:text="Your Makeup"/>
    <com.padc.beauty.components.MMTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:layout_margin="@dimen/margin_medium"
        android:text="For the nuetral ladies like Selena Gomez, you've got an equal number of blue and green veins. You are also one of the lucky ones who can pull off any shade of lipstick and eyeshadow."/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_medium_2">
        <com.padc.beauty.components.DynamicHeightImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/special_makeup1"/>
        <com.padc.beauty.components.DynamicHeightImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/special_makeup2"/>
        <com.padc.beauty.components.DynamicHeightImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/special_hair_style1"/>
    </LinearLayout>
    <com.padc.beauty.components.MMTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_regular_3x"
        android:textColor="@color/primary"
        android:layout_margin="@dimen/margin_medium"
        android:text="Your Dressing"/>
    <com.padc.beauty.components.MMTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:layout_margin="@dimen/margin_medium"
        android:text="Unlike other body shapes, the hourglass figure a significantly defined waist.
Your curves are flattering in the right places. Fat is usually evenly stored throughout."/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_medium_2">
        <com.padc.beauty.components.DynamicHeightImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/special_dressing_style1"/>
        <com.padc.beauty.components.DynamicHeightImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/special_dressing_style2"/>
        <com.padc.beauty.components.DynamicHeightImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/special_dressing_style3"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>