<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabTextColor="@color/primary_light"
        app:tabSelectedTextColor="@color/primary_dark"
        app:tabIndicatorColor="@color/primary"
        app:tabTextAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionMode.Subtitle"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/pager_tips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>